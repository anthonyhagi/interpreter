{
  "compilerOptions": {
    // Project Options
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "removeComments": true,
    "target": "es6",

    // Module Resolution
    // The base directory for non-absolute module names.
    "baseUrl": "src/",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",

    // Re-map imports for common locations
    "paths": {
      "~/*": "src/*"
    },

    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/", "tests/"],
  "exclude": ["node_modules/"]
}
